{
  "name": "reviews",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/reviews/src",
  "targets": {
    "build": {
      "options": {
        "outputPath": "dist/apps/reviews",
        "configFile": "apps/reviews/vite.config.ts"
      },
      "executor": "@nrwl/vite:build"
    },
    "build-ssr": {
      "defaultConfiguration": "preview",
      "options": {
        "outputPath": "dist/apps/reviews"
      },
      "configurations": {
        "preview": {
          "ssr": "src/entry.preview.tsx"
        },
        "cloudflare-pages": {
          "ssr": "entry.cloudflare-pages.tsx"
        }
      },
      "executor": "@nrwl/vite:build",
      "dependsOn": ["build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview --port 5005",
        "cwd": "apps/reviews"
      },
      "dependsOn": ["build-ssr"]
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "reviews:build",
        "mode": "ssr",
        "port": 5005
      },
      "configurations": {
        "development": {
          "buildTarget": "reviews:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "reviews:build:production",
          "hmr": false
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/reviews/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
